---
const activityStats = [
    { value: "1000+", name: "Jira Tickets Closed" },
    { value: "90%", name: "On Budget" },
    { value: "94%", name: "On Time" },
    { value: "100%", name: "Client Satisfaction" },
];
---

<section id="about" class="section-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="section-title">
                    <h2>My Activity</h2>
                </div>
            </div>
            <div class="col-md-9">
                <div class="row">
                    {
                        activityStats.map(({ value, name }) => (
                            <div class="col-sm-3">
                                <div class="item-stats">
                                    <div class="item-stats-value">{value}</div>
                                    <div class="item-stats-name">{name}</div>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</section>
